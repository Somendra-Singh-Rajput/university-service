<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <file>/Users/somendrasingh/Desktop/Somendra/Java/Projects/apnaclassroom/UMS.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [UMS] [%property{spring.profiles.active}] [%X{X-B3-TraceId},%X{X-B3-SpanId}, %X{X-B3-ParentSpanId}] [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="console" />
    </root>
</configuration>
